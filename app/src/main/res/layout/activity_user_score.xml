<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.brammulder.quizapp.userScoreEnd">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageUserEnd"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/jb_pp"
            android:maxWidth="200dp"
            android:maxHeight="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score Current"
            android:id="@+id/userScoreText"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score Highest"
            android:id="@+id/userScoreHighest"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="2"
            android:layout_column="0" />
    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="     Settings    "
            android:id="@+id/button"
            android:layout_gravity="left|bottom"
            android:textSize="12dp"
            android:onClick="openSettings" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="    Main Menu    "
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="12dp"
            android:onClick="openMainMenu" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Leaderboard"
            android:id="@+id/button3"
            android:layout_gravity="right|bottom"
            android:textSize="12dp"
            android:onClick="openLeaderboard" />
    </FrameLayout>


</RelativeLayout>
